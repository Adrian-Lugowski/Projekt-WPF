<Window x:Class="Projekt_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Katalog Cudów Świata" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="+ Dodaj Nowy" Command="{Binding OpenAddWindowCommand}" Padding="10,5" Background="#DDDDDD"/>
            <Button Content="Odśwież" Command="{Binding LoadDataCommand}" Margin="10,0,0,0" Padding="10,5"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Wonders}" BorderThickness="1" BorderBrush="Gray">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Lokalizacja" DisplayMemberBinding="{Binding Location}" Width="150"/>
                    <GridViewColumn Header="Opis" DisplayMemberBinding="{Binding Description}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
