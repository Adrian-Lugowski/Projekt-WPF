<Window x:Class="Projekt_WPF.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Główne" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="🏛️" FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Katalog Cudów Świata" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#333333" HorizontalAlignment="Center"/>
            <TextBlock Text="Odkrywaj i zarządzaj architekturą" 
                       FontSize="12" Foreground="Gray" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <Button Content="🔍 Zobacz architektoniczne cuda" 
                    Click="OpenView_Click"
                    Height="40" Margin="0,0,0,10" Background="#E6F0FF" FontWeight="SemiBold"/>

            <Button Content="🛠️ Zarządzanie" 
                    Click="OpenManage_Click"
                    Height="40" Margin="0,0,0,10" Background="#F0F0F0"/>

            <Button Content="❌ Wyjście" 
                    Click="Exit_Click"
                    Height="40" Width="150" HorizontalAlignment="Center" Margin="0,20,0,0" Background="Transparent" BorderBrush="Gray"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Adrian Ługowski" 
                   HorizontalAlignment="Center" Foreground="LightGray" FontSize="10"/>
    </Grid>
</Window>