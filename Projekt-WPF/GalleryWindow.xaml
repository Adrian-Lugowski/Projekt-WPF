<Window x:Class="Projekt_WPF.GalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Galeria" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        WindowState="Maximized"
        Background="Black">

    <Grid>
        <Grid ClipToBounds="True">
            <Image Source="{Binding CurrentWonder.ImagePath}" 
                   Stretch="UniformToFill"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="ImageScale" ScaleX="1" ScaleY="1"/>
                </Image.RenderTransform>

                <Image.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetName="ImageScale"
                                                 Storyboard.TargetProperty="ScaleX"
                                                 From="1.0" To="1.15" Duration="0:0:20"/>
                                <DoubleAnimation Storyboard.TargetName="ImageScale"
                                                 Storyboard.TargetProperty="ScaleY"
                                                 From="1.0" To="1.15" Duration="0:0:20"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Image.Triggers>
            </Image>

            <Border Background="Black" Opacity="0.3"/>
            <Border VerticalAlignment="Bottom" Height="250">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#CC000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>

        <Button Command="{Binding CloseCommand}" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="20" Padding="10"
                Background="#33000000" BorderBrush="White" Foreground="White"
                Content="❌ ZAMKNIJ" FontWeight="Bold" Cursor="Hand"/>

        <Button Command="{Binding PreviousCommand}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="40" Foreground="White" Background="Transparent" BorderThickness="0"
                Content="❮" Margin="20" Cursor="Hand" Opacity="0.7"/>

        <Button Command="{Binding NextCommand}" 
                HorizontalAlignment="Right" VerticalAlignment="Center"
                FontSize="40" Foreground="White" Background="Transparent" BorderThickness="0"
                Content="❯" Margin="20" Cursor="Hand" Opacity="0.7"/>

        <StackPanel VerticalAlignment="Bottom" Margin="100,0,100,50">
            <TextBlock Text="{Binding CurrentWonder.Name}" 
                       FontSize="48" FontWeight="Bold" Foreground="White">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
                </TextBlock.Effect>
            </TextBlock>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                <TextBlock Text="📍 " Foreground="Yellow" FontSize="18"/>
                <TextBlock Text="{Binding CurrentWonder.Location}" Foreground="#DDDDDD" FontSize="18" Margin="0,0,20,0"/>

                <TextBlock Text="📅 " Foreground="Yellow" FontSize="18"/>
                <TextBlock Text="{Binding CurrentWonder.DateBuilt}" Foreground="#DDDDDD" FontSize="18"/>
            </StackPanel>

            <TextBlock Text="{Binding CurrentWonder.Description}" 
                       Foreground="White" FontSize="16" TextWrapping="Wrap" 
                       Opacity="0.9" MaxWidth="800" HorizontalAlignment="Left" LineHeight="24"/>
        </StackPanel>
    </Grid>
</Window>