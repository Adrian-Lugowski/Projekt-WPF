<Window x:Class="Projekt_WPF.AddWonderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Cud Świata" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Nazwa:" FontWeight="Bold"/>
            <TextBox Text="{Binding NewWonder.Name}" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Lokalizacja:" FontWeight="Bold"/>
            <TextBox Text="{Binding NewWonder.Location}" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Opis:" FontWeight="Bold"/>
            <TextBox Text="{Binding NewWonder.Description}" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,10" Padding="5"/>

            <Button Content="ZAPISZ" Command="{Binding SaveCommand}" Height="40" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>